{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:/msys64/mingw64/bin/g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
				"-I${workspaceFolder}\\libraries\\SDL2-2.24.0\\x86_64-w64-mingw32\\include\\SDL2",
				"-I${workspaceFolder}\\libraries\\SDL2_image-2.6.2\\x86_64-w64-mingw32\\include\\SDL2",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-L${workspaceFolder}\\libraries\\SDL2-2.24.0\\x86_64-w64-mingw32\\lib",
				"-lSDL2_image",
				"-L${workspaceFolder}\\libraries\\SDL2_image-2.6.2\\x86_64-w64-mingw32\\lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:/msys64/mingw64/bin/g++.exe"
		}
	]
}